---
import Button from "./Button.astro";
import Card from "./Card.astro";
---

<section id="tickets" class="tickets-section section">
  <div class="u-container">
    <h2 class="section-heading u-font-xl">2026 Advance Tickets & Add-Ons</h2>
    <div class="tickets-layout">
      <Button href="#" subtext="$15 plus tax">Single ticket</Button>
      <Button href="#" subtext="$62 plus tax">Six ticket pack</Button>
      <Button href="#" subtext="$10 plus tax">VIP early entry add-on</Button>
    </div>
    <ul class="addon-deck u-list-reset">
      <Card
        heading="Festival Shirt"
        imgHref="add-ons/shirt-front.jpg"
        caption="($18 PLUS TAX)"
        buttonUrl="#"
      />
      <Card
        heading="Poster Kit"
        imgHref="add-ons/poster-kit.jpg"
        caption="($12 PLUS TAX)"
        buttonUrl="#"
      />
      <Card
        heading="Souvenir Lanyard"
        imgHref="add-ons/lanyard.jpg"
        caption="($8 PLUS TAX)"
        buttonUrl="#"
      />
    </ul>
  </div>
</section>

<style is:global>
  .tickets-layout {
    display: flex;
    flex-wrap: wrap;
    margin: -0.5rem;
  }
  .tickets-layout .button {
    display: flex;
    flex-direction: column;
    flex: 1 0 14rem;
    align-items: center;
    justify-content: center;
    min-height: 4.2rem;
    margin: 0.5rem;
  }
  .tickets-layout .button:last-of-type {
    min-width: calc(100% - 1rem);
  }
  .addon-deck {
    display: flex;
    flex-wrap: wrap;
    margin: 0.5rem -0.5rem;
  }
  .addon-deck .card {
    margin: 0.5rem;
    flex: 1 0 auto;
    text-align: center;
  }
  @media (min-width: 666px) {
    .addon-deck .card {
      max-width: calc(33.333% - 1rem);
    }
  }
  .addon-deck .card:first-of-type {
    flex: 1 1 auto;
  }
  .addon-deck .card-img {
    width: 100%;
    position: relative;
  }
  .addon-deck .button {
    font-size: var(--font-sm);
  }

  /* shirt go brrr */
  .addon-deck .card:first-of-type .card-img:after {
    content: "";
    position: absolute;
    display: block;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: url(add-ons/shirt-back.jpg);
    background-size: cover;
    opacity: 0;
    will-change: transform;
    transform: rotateY(30deg);
    transition: transform 0.2s ease-out;
  }
  .addon-deck .card:first-of-type .card-img:hover:after {
    opacity: 1;
    transform: none;
  }
</style>
